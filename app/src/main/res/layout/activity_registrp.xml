<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#140761"
    tools:context=".Registrp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="413dp"
        android:layout_height="63dp"
        android:background="#240CAD"
        android:gravity="center"
        android:text="TODOMOTOS"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="684dp"
        android:layout_height="538dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/motologo" />

    <ScrollView
        android:layout_width="411dp"
        android:layout_height="675dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TituloRegistroM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Registro de usuario"
                android:textColor="#FBFBFB"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/RegsitroNombre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="102dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/MarcamotoR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="src_atop"
                android:ems="10"
                android:gravity="center"
                android:hint="Marca de moto"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Contrase침aR" />

            <EditText
                android:id="@+id/Contrase침aR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="102dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Contrase침a"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/KilometrajeR" />

            <EditText
                android:id="@+id/ReferenciamotoR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="29dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Referencia de moto"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MarcamotoR" />


            <EditText
                android:id="@+id/PlacamotoR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Placa moto"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ModelomotoR" />

            <EditText
                android:id="@+id/ModelomotoR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#FBFAFA"
                android:ems="10"
                android:gravity="center"
                android:hint="Modelo de la moto"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ReferenciamotoR" />


            <EditText
                android:id="@+id/KilometrajeR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="102dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Kilometraje"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PlacamotoR" />

            <EditText
                android:id="@+id/FechasoatR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="103dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Fecha de SOAT"
                android:inputType="date"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/KilometrajeR" />

            <EditText
                android:id="@+id/FechatecnoR"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:hint="Fecha de Tecnomec치nica"
                android:inputType="date"
                android:textColor="#FFFEFE"
                android:textColorHint="#FDFDFD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FechasoatR" />

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#000000"
                android:onClick="Entrar"
                android:text="Aceptar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PlacamotoR" />

            <Button
                android:id="@+id/btnRegistroCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#000000"
                android:onClick="Cancelar"
                android:text="Cancelar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PlacamotoR" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>